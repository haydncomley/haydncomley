---
import NavigationItem from './NavigationItem.astro'
import NavigationButton from './NavigationButton.astro'
import NavigationName from './NavigationName.astro'
import { navItems } from '../../lib/Pages.lib';
---

<nav class="nav">
    <NavigationName></NavigationName>

    <ul class="navLinks">
        { navItems.map((item, index) => (
            <NavigationItem {...item} index={index}></NavigationItem>
        )) }

        <NavigationButton></NavigationButton>
    </ul>
</nav>

<style lang="scss">
    .nav {
        border-bottom: var(--border);
        display: flex;
        justify-content: space-between;
        align-items: center;
        z-index: 10;
        position: sticky;
        top: 0;
        background-color: var(--background);
        transition: var(--transitionSlow);
        padding-left: .5rem;
    }
    
    body:has(#menu:checked) {
        .nav {
            background-color: var(----contrast);
        }
    }

    .navLinks {
        display: flex;
        list-style: none;
        margin: 0;
        padding: 0;
    }
</style>
{
    "extends": [
        "eslint:recommended",
        "plugin:@typescript-eslint/recommended"
    ],
    "parser": "@typescript-eslint/parser",
    "parserOptions": {
        "ecmaVersion": 2020
    },
    "plugins": [
        "@typescript-eslint",
        "sort-keys-fix",
        "unused-imports"
    ],
    "rules": {
        "indent": [
            "error",
            "tab"
        ],
        "quotes": [
            "error",
            "single"
        ],
        "semi": [
            "error",
            "always"
        ],
        "@typescript-eslint/no-empty-interface": "off",
        "sort-keys-fix/sort-keys-fix": [
            "error",
            "asc",
            {
                "caseSensitive": false,
                "natural": true
            }
        ],
        "space-before-blocks": "error",
        "block-spacing": "error",
        "object-curly-spacing": [
            "error",
            "always"
        ],
        "unused-imports/no-unused-imports": "error"
    }
}